# terminal emulator
super + Return
	$TERMINAL

super + shift + Return
	~/.local/bin/eDEX-UI.Linux.x86_64.AppImage &

super + space
	rofi -modi drun -show drun
super + shift + Tab
	rofi -modi run,window -show window -window-thumbnail

#dropdown terminal
super + {_,shift} + slash
	{scratch scratch_term,  \
	termdraw}

super + Escape
	$TERMINAL -e  nvim ~/.config/sxhkd/sxhkdrc

# Programms
#super + shift + y
#	( dunstify -i xt7-player-mpv "Player:" "mpv is on his way..." ) && \
#	mpv $(xclip -o -selection primary)

super + {w,m,b,v}
	{$BROWSER, \
	scratch "scratch_ncmpcpp" "ncmpcpp", \
	scratch "scratch_btm" "btm", \
	rofivirts}

#calculator
super + {shift,_} + a
	{scratch "scratch_pulse" "pulsemixer", \
	scratch_gui qalculate-gtk}

super + e
	pcmanstart

super + shift + e
	$TERMINAL -e nnn -a


#lock screen
super + l
	i3lock-fancy

super + F{1-9,10,11,12}
	{rofisearch, \
	bspc wm -r && dunstify "BSPWM" "I was restarted..." -i gtk-dialog-info,  \
	displayselect, \
	rofipower, \
	tortgl, \
	dmenuqbnox, \
	dmenuiwd -d, \
	dmenubluetogle, \
	rofimount, \
	rofiumount, \
	bar-toggle show, \
	bar-toggle hide}

# screenshots
{_,alt} + Print
	{rofiscreen, \
	PICNAME=~/Pictures/Screen/"$(date '+%y%m%d-%H%M-%S').png" ; \
	maim -d 3 $PICNAME ; \
	sxiv $PICNAME}

# mpc
super + p
	mpcnotify toggle
super + {plus,minus}
	amixer sset Master {5%+,5%-}
super + {bracketleft,bracketright}
	{seek -20,seek +20}
super + {period,comma}
	mpcnotify {next,prev}

# dmenuscripts
super + grave
	dmenuunicode
super + Insert
	showclip

super + { ,shift} + d
	{dmenu_run,	rofinvim}
#
# fn keys
#

XF86MonBrightness{Down,Up}
	brightControl {down,up}

XF86Audio{Mute,LowerVolume,RaiseVolume}
	volControl {mute,down,up}

# volume with mouse
alt + button{2,4,5}
	volControl {mute,up,down}

XF86TouchpadToggle
	touchpadtoggle

XF86WebCam
	camtoggle
#
# bspwm hotkeys
#

# close and kill
super + {_,shift + }q
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + shift + m
	bspc desktop -l next ; \
	notify-send "WARNIGN" "Monocle watch!"

# swap the current node and the biggest node
super + g
	bspc node -s biggest.local

#
# state/flags
#

super + f
	bspwm_winstate_notes

super + shift + f
	bspwm_winstate_notes astern

# set the node flags
alt + {m,l,s,p}
	win_flags {marked,locked,sticky,private}
#
# focus/swap
#

# focus / move the node in the given direction
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# focus the next/previous node in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local


# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} ^{1-9,10}

# focus the last node/desktop
super + Tab
	bspc desktop -f last
# switch to next connected monitor
super + shift + grave
	bspc node --to-monitor next

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

#
# move/resize
#

#resize windows with script
super + alt + {h,j,k,l}
	resize {west,north,south,east}


# move a floating window
super + ctrl + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# Right / left corner
super + shift + {b,n}
	hover {left,right}

# rotate desktop
super +{_,shift} + r
	bspc node @/ -R {90,270}

# hide/unhide windows
super + h
	bspc node -g hidden
super + shift + h
	bspc node {,$(bspc query -N -n .hidden | tail -n1)} -g hidden=off

button9
	volControl up

button8
	volControl down
